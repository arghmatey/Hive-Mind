<% include ../partials/header %>


<main>

    <!-- LOADS USER INFORMATION ON SIDE PANEL -->
    <div id="user">
        <% if (user) { %>
        <div id="user-card">
            <% if (user.avatar) { %>
                <img src="<%= user.avatar %>" class="user-avatar">
              <% } else { %>
                <div id="default-avatar"></div>
              <% } %>
        </div>
        <div class="user-name"><%= user.name %></div>
            <% } else { %>
                <div id="user-card">
                    this is where the user stuff will go
                </div>
                <% } %>
        <a href="/reports/all">twilight zone</a>
    </div>


    <div id="feed">
        <% if (user) { %>
        <div id="new-post">
            <h3>what are you watching now?</h3>
            <form method="POST" action="/reports">
                <label>Title:
                    <input type="text" name="movie" autocomplete="off">
                </label><br>
            <label>Report:
                <input type="text" name="content" autocomplete="off">
                </label><br>
                <label>Rating:
                <select name="rating">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7" selected>7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                  </select></label>
            <input type="submit" value="send">
            </form></div>
            <% } else { %>
                <div>you must log in to post.</div>
                <% } %>
                
    <div id="all-reports">

        <!-- this is one single report -->
        <% reports.forEach(function(r) { %>
        <div class="each-report">
            <div class="poster-container">
                <img class="poster" src="/images/defaultposter.png">
            </div>

            <p class="reported-by"><%= r.userReporting.name %></p>
            <div class="text-and-options">
                <div class="text-container">
                    <h4>Movie: <%= r.movie %></h4>
                    <p><%= r.content %></p>
                    <div>Rating: <%= r.rating %></div>
                </div>
                <div class="options-container">
                    <button class="collapsible" type="button">COMMENT</button>
                        <form class="collapse" id="add-comment-form" method="POST" action="/reports/<%= r._id %>/comments">
                            <textarea name="text" placeholder="say something..."></textarea>
                            <textarea name="userName" placeholder="who are you?"></textarea>
                            <input type="submit" value="Add Comment">
                        </form>

                    <!-- only show delete and edit if user logged in is the same as userReporting -->

                    <% if (user._id.toString() === r.userReporting._id.toString()) { %>
                    
                        <button class="collapsible" type="button">EDIT REPORT</button>
                        <form class="collapse" id="edit-report-form" method="POST" action="/reports/<%= r._id %>">
                            <label>Title:
                                <input type="text" name="movie" value="<%= r.movie %>">
                            </label><br>
                        <label>Report:
                            <input type="text" name="content" value="<%= r.content %>">
                            </label><br>
                            <label>Rating:
                            <select name="rating" value="<%= r.rating %>">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                              </select></label>
                        </form>
                    <form action="/reports/<%= r._id %>?_method=DELETE" class="delete-form" method="POST">
                        <button type="submit">DELETE</button>
                    </form>
                    <% } else { %>
                      <% } %>
                </div>
                <div class="comments">
                    
                    <% if (r.comments.length) { %>
                        <tbody>
                        <tr>
                            <% r.comments.forEach(function(c) { %>
                              
                                <td><%= c.userName %> says...</td>
                                <td><%= c.text %></td>
                              
                            <% }); %>
                        </tr>
                            <tbody>
                      <% } else { %>
                        <h5>No comments yet...</h5>
                      <% } %>
                </div>
            </div>
        </div>        
            <% }); %>

            <!-- this is where one single report ends -->
    </div>
</main>

</body>
